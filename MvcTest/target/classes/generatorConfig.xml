<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<classPathEntry location="C:\ojdbc6.jar"/>
	<context id="context1">
		<!-- Lombokプラグイン設定 -->
		<plugin type="com.softwareloop.mybatis.generator.plugins.LombokPlugin">
			<!-- enable annotations -->
			<property name="builder" value="false"/>
			<property name="allArgsConstructor" value="false"/>
		</plugin>

		<!-- タイムスタンプを含まないコメントを生成する設定 -->
		<commentGenerator>
			<property name="addRemarkComments" value="true" />
			<property name="suppressDate" value="true" />
		</commentGenerator>

		<!-- DBコネクション設定 -->
		<jdbcConnection
			driverClass="oracle.jdbc.driver.OracleDriver"
			connectionURL="jdbc:oracle:thin:@localhost:1521:xe"
			userId="ora_test"
			password="ora_test" />

		<!-- モデル設定 -->
		<javaModelGenerator targetPackage="com.example.sample.domain.model.maintenance"
			targetProject="MvcTest" />

		<!-- SQLマッパー設定 -->
		<sqlMapGenerator targetPackage="com.example.sample.domain.mapper.maintenance"
			targetProject="MvcTest/src/main/resources" />

		<!-- マッパークラス設定 -->
		<javaClientGenerator targetPackage="com.example.sample.domain.mapper.maintenance"
			targetProject="MvcTest" type="XMLMAPPER" />


		<table tableName="GENRE_LG" alias="GENRE_LG" />
		<table tableName="GENRE_MD" alias="GENRE_MD" />


	</context>
</generatorConfiguration>